{
  "version": 2,
  "builds": [
    {
      "src": "server/server-simple.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "functions": {
    "server/server-simple.js": {
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/ping",
      "dest": "/server/server-simple.js"
    },
    {
      "src": "/warmup",
      "dest": "/server/server-simple.js"
    },
    {
      "src": "/health",
      "dest": "/server/server-simple.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/server/server-simple.js"
    },
    {
      "src": "/(.*)",
      "dest": "/server/server-simple.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
